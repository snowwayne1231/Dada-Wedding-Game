#bingo {
    .bingo-grid {
        position: relative;
        display: flex;
        flex-direction: column;
        width: 100%
        height: 100vw;

        .grid-y {
            display: flex;
            flex-direction: row;
            height: 100%;
            width: 100%;
            flex: 1;
            justify-content: center;
            align-items: center;

            border-bottom: 1px solid gray;
            box-sizing: border-box;
        }

        .grid-x {
            display: flex;
            position: relative;
            justify-content: center;
            align-items: center;
            flex: 1;
            text-align: center;
            height: 100%;

            border-right: 1px solid gray;
            box-sizing: border-box;

            >span {

            }
        }

        .grid-choice {
            padding: 14px 10px;
        }
    }
}


